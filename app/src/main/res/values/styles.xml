<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 日间主题 -->
    <style name="DayTheme" parent="AppTheme">
        <item name="root_view_bg">@color/color_white</item>
        <item name="top_root_color">@color/bg_top_light_color</item>
        <item name="text_color">@color/text_black</item>
        <item name="text_second_color">@color/text_gray_light</item>
        <item name="book_list_bg">@color/color_white</item>
    </style>

    <!-- 夜间主题 -->
    <style name="NightTheme" parent="AppTheme">
        <item name="root_view_bg">@color/bg_light_color</item>
        <item name="top_root_color">@color/bg_top_light_color</item>
        <item name="text_color">@color/text_black</item>
        <item name="text_second_color">@color/text_gray_light</item>
        <item name="book_list_bg">@color/bg_dark_color</item>

    </style>

</resources>
